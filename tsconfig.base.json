{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "declaration": true,
    "composite": true,
    "incremental": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strictBindCallApply": true,
    "paths": {
      "@/*": ["./src/*"],
      "@": ["./src"]
    }
  },
  "include": [
    "src"
  ]
}
